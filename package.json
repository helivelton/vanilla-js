{
  "scripts": {
    "build": "npm run build:sass && npm run build:css && npm run build:js",
    "build:sass": "sass styles/style.scss styles/style.css",
    "build:css": "cleancss -o styles/style.min.css styles/style.css",
    "build:js": "terser scripts/main.js -o scripts/main.min.js --compress --mangle"
  },
  "dependencies": {
    "clean-css-cli": "^5.6.3",
    "sass": "^1.85.1",
    "terser": "^5.39.0"
  }
}
